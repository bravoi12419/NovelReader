
@{
    ViewBag.Title = "新增章節-卡提諾";
}

<h2>請輸入網頁上的TID以及總頁數</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("書名 : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("novelName", ViewBag.newNovelName as string, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("作者 : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("novelAuthor", ViewBag.newNovelAuthor as string, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("TID : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("tid", new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("總頁數 : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("numberOfPage", new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-default" />
            </div>
        </div>
    </div>


}

